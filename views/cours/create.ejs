<%- include('../partials/header')-%>
<%- include('../partials/navbar')-%>
    
<div class="container">
    <div class="row mt-4">
    <div class="col-md-6 offset-md-2">
        <div class="display-4">Add New Cours:</div>
        <hr>
        <%- include('../partials/flashMessage')-%>
       

        <form action="/courses/create" method="post" >
           
            <div class="form-group">
                <label for="prof">Prof</label>
                <select name="prof" id="prof" class="form-control">
                  <% teachers.forEach(function(teacher) { %>
                    <option value="<%= teacher._id %>"><%= teacher.nom %></option>
                  <% }) %>
                </select>
              </div>
            <div class="form-group">
                <label for="matiere">Matiere</label>
                <select name="matiere" id="matiere" class="form-control">
                  <% matieres.forEach(function(matiere) { %>
                    <option value="<%= matiere._id %>"><%= matiere.name %></option>
                  <% }) %>
                </select>
              </div>
                
            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" name="date" id="date" class="form-control">
            </div>
            
            <div class="form-group">
                <label for="Deb">Date Deb</label>
                <input type="datetime-local" name="Deb" id="Deb" class="form-control">
            </div>
            <div class="form-group">
                <label for="Fin"> Date Fin</label>
                <input type="datetime-local" name="Fin" id="Fin" class="form-control">
            </div>
            

            
            <div class="form-group">
                <label for="CM">CM</label>
                <input type="tel" name="CM" id="CM" class="form-control">
            </div>
            <div class="form-group">
                <label for="TD">TD</label>
                <input type="tel" name="TD" id="TD" class="form-control">
            </div>
            <div class="form-group">
                <label for="TP">TP</label>
                <input type="tel" name="TP" id="TP" class="form-control">
            </div>
            

            <div class="form-group mt-3" >
                <button type="submit" class="btn btn-info" 
                style="width: 550px;border-radius: 20px;">Create</button>
            </div>
        </form>
    </div>
</div>
</div>

    <%- include('../partials/footer')-%>