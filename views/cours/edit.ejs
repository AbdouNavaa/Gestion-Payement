<%- include('../partials/header')-%>
<%- include('../partials/navbar')-%>
    
<div class="container">
    <div class="row mt-4">
    <div class="col-md-6 offset-md-2">
        <div class="display-4">Update Cours:</div>
        <hr>
        <%- include('../partials/flashMessage')-%>
       

        <form action="/courses/update" method="post" >
           
            <div class="form-group">
                <label for="prof">Prof</label>
                <select name="prof" id="prof" class="form-control">
                    <option value=""><%= cours.prof.nom%></option>
                    <% profs.forEach(function(teacher) { %>
                      <option value="<%= teacher._id %>"><%= teacher.nom %></option>
                    <% }) %>
                </select>
              </div>
            <div class="form-group">
                <label for="matiere">matiere</label>
                <select name="matiere" id="matiere" class="form-control">
                    <option value=""><%= cours.matiere.name%> </option>
                    <% matieres.forEach(function(mat) { %>
                      <option value="<%= mat._id %>"><%= mat.name %></option>
                    <% }) %>
                </select>
              </div>
                            
            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" name="date" id="date" class="form-control" value="<%= coursDate%>">
            </div>

            
            <div class="form-group">
                <label for="Deb">Deb</label>
                <input type="datetime" name="Deb" id="Deb" class="form-control" value="<%= Deb%>">
            </div>
            <div class="form-group">
                <label for="Fin">Fin</label>
                <input type="datetime" name="Fin" id="Fin" class="form-control" value="<%= Fin%>">
            </div>

            <div class="form-group">
                <label for="CM">CM</label>
                <input type="tel" name="CM" id="CM" class="form-control" value="<%= cours.CM%>">
            </div>

            <div class="form-group">
                <label for="TD">TD</label>
                <input type="tel" name="TD" id="TD" class="form-control" value="<%= cours.TD%>">
            </div>

            <div class="form-group">
                <label for="TP">TP</label>
                <input type="tel" name="TP" id="TP" class="form-control" value="<%= cours.TP%>">
            </div>
            

            <div class="form-group mt-3" >
                <button type="submit" class="btn btn-info" style="width: 550px;border-radius: 20px;">Update</button>
                <a href="<%= '/courses/'%>" class="btn btn-dark"
                    style="width: 550px;border-radius: 20px;margin-top:1%">Back</a>
            </div>
        </form>
    </div>
</div>
</div>

    <%- include('../partials/footer')-%>